{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*":["./src/*"],
      "@components": ["./src/components"],
      "@screens": ["./src/screens"],
      "@stores": ["./src/stores"],
      "@enums":["./src/enums"]
    }
  },
  "exclude": [
    "node_modules",
    "web"
  ]
}